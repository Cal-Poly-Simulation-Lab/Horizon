{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Horizon/Horizon.csproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Horizon"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-scheduler-tests",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/test/HSFSchedulerUnitTest/HSFSchedulerUnitTest.csproj",
        "--configuration",
        "Debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}/test/HSFSchedulerUnitTest"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "select-tests",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/select-tests.zsh",
      "options": {
        "env": {
          "WORKSPACE_FOLDER": "${workspaceFolder}"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "select-and-build-tests",
      "dependsOn": ["select-tests", "build-scheduler-tests"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "run-selected-tests",
      "dependsOn": ["select-and-build-tests"],
      "dependsOrder": "sequence",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/run-selected-tests.zsh",
      "options": {
        "env": {
          "WORKSPACE_FOLDER": "${workspaceFolder}"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    }
  ]
}
